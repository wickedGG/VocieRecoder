<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="-1dp" android:right="-1dp">
                <shape>
                    <solid android:color="#242424" />
                    <corners android:radius="8dp" />
                    <stroke android:width="1dp" android:color="#242424" />
                </shape>
            </item>
            <item android:right="10dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_down" />
            </item>
        </layer-list>
    </item>


    <item android:state_selected="true">
        <layer-list>
            <item android:left="-1dp" android:right="-1dp">
                <shape>
                    <solid android:color="#242424" />
                    <corners android:radius="8dp" />
                    <stroke android:width="1dp" android:color="#242424" />
                </shape>
            </item>
            <item android:right="10dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_up" />
            </item>
        </layer-list>
    </item>

</selector>